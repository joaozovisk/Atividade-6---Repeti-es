programa
{
    funcao inicio()
    {
        real base
        inteiro expoente

        escreva("Digite o valor da base: ")
        leia(base)
        escreva("Digite o valor do expoente: ")
        leia(expoente)

        calcularPotencia(base, expoente)
    }

    funcao calcularPotencia(real base, inteiro expoente)
    {
        real resultado = 1
        inteiro contador

        para (contador = 1; contador <= expoente; contador++)
        {
            resultado = resultado * base
        }

        escreva("O resultado de ", base, " elevado a ", expoente, " Ã©: ", resultado, "\n")
    }
}
