programa
{
    funcao inicio()
    {
        inteiro numero, fatorial = 1, contador

        escreva("Digite um número: ")
        leia(numero)

        para (contador = 1; contador <= numero; contador++)
        {
            fatorial = fatorial * contador
        }

        escreva("O fatorial de ", numero, " é: ", fatorial, "\n")
    }
}
