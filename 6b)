programa
{
	
	funcao inicio()
	{
		real n_atual = 1.0
		real n_anterior = 0.0
		real n_proximo = 0.0
		real limite
		escreva("Informe um valor limite: ")
		leia(limite)

		enquanto(n_atual <= limite)
		{
			escreva(n_atual, "\n")
			n_proximo = n_atual + n_anterior

			n_anterior = n_atual
			n_atual = n_proximo
		}
	}
}
