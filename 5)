programa
{
    funcao inicio()
    {
        inteiro numero, pares = 0, impares = 0
        inteiro contador

        para (contador = 1; contador <= 5; contador++)
        {
            escreva("Digite o ", contador, "º número: ")
            leia(numero)

            se (numero % 2 == 0)
            {
                pares = pares + 1
            }
            senao
            {
                impares = impares + 1
            }
        }

        escreva("Quantidade de números pares: ", pares, "\n")
        escreva("Quantidade de números ímpares: ", impares, "\n")
    }
}
